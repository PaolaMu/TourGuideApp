<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/min_hight"
    android:padding="@dimen/padding_16">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/width_100"
        android:layout_height="@dimen/height_100"
        android:contentDescription="@string/places_image" />

    <RelativeLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_150"
        android:layout_toEndOf="@id/image"
        android:layout_toRightOf="@id/image"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_left_16"
        android:paddingStart="@dimen/padding_left_16">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/size_18"
            android:textStyle="bold"
            tools:text="JW Marriott Houston" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12"
            android:textStyle="italic"
            tools:text="Sorry" />


        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            tools:text="806 S Main St, Houston, TX 77002" />

        <TextView
            android:id="@+id/web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/address"
            android:textColor="@color/black"
            tools:text="web" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/web"
            android:textColor="@color/black"
            tools:text="phone" />


    </RelativeLayout>
</RelativeLayout>


